@model DatabaseModel.Models.Product

@{
    ViewData["Title"] = "Ürün Sil";
}

<h1>Ürün Sil - @Model.Name</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Kategori")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Stok")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Satış")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalSales)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Sil" class="btn btn-danger" />
    </form>
</div>
<hr />
<div>
    <a asp-action="Index">Geri</a>
</div>