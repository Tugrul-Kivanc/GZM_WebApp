@model CreateOrderViewModel

@{
    ViewData["Title"] = "Satış Düzenle";
}

<h1>Satış Düzenle</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
            <input type="hidden" asp-for="OrderDate" value="@Model.OrderDate" />
            <label>@Model.OrderDate.ToString("dd.MM.yyyy")</label>
            <div class="form-group">
                <label asp-for="ProductIds" class="control-label">Ürünler</label>
                <select asp-for="ProductIds" asp-items="ViewBag.Products" id="selectProducts" class="form-control" multiple="multiple"></select>
                <span asp-validation-for="ProductIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fee" class="control-label">Ücret</label>
                <input asp-for="Fee" class="form-control" />
                <span asp-validation-for="Fee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment" class="control-label">Ödeme</label>
                <select asp-for="Payment" class="form-control" asp-items="ViewBag.PaymentTypes"></select>
                <span asp-validation-for="Payment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Not</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Geri</a>
</div>

@section Scripts{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#selectProducts").select2();
        });
    </script>
}