@model DatabaseModel.Models.Equalivent

@{
    ViewData["Title"] = "Muadil Ekle";
}

<h1>Muadil Ekle</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EqualiventBrandId" class="control-label">Muadil Marka</label>
                <select asp-for="EqualiventBrandId" class ="form-control" asp-items="ViewBag.EqualiventBrandId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label">Muadil Kod</label>
                <input asp-for="Code" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PerfumeId" class="control-label">GZM Kod</label>
                <select asp-for="PerfumeId" class="form-control" asp-items="ViewBag.PerfumeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri</a>
</div>

